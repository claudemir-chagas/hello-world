{
  "extends": "airbnb",
  "rules": {
    "import/order": 0,
    "no-underscore-dangle": 0,
    "no-param-reassign": 0,
    "consistent-return": 0,
    "no-unused-expressions": 0,
    "no-shadow": 0,
    "no-await-in-loop": 0,
    "arrow-parens": [2, "as-needed", { "requireForBlockBody": true }],
    "prefer-object-spread": 0,
    "react/no-this-in-sfc": 0,
    "react/jsx-indent": 0,
  },
  "plugins": ["json"],
  "env": {
    "mocha": true
  },
  "globals": {
    "expect": true,
    "assert": true,
    "sinon": true,
    "DEFAULT_USER_ID": true
  }
}
